<h1>Articles</h1>
<%= link_to 'New Article', new_article_path, :class => "btn btn-warning" %>
<%= link_to 'New Product', new_product_path %>
<ul>
  <% @articles.each do |article| %>
    <li>
      <a href="/articles/<%= article.id %>">
        <%= article.title %> usando routes get /articles/:id 
      </a>
    </li>
    <li>
      <a href="<%= article_path(article.id) %>">
        <%= article.title %> usando resources :articles em routes
      </a>
    </li>
    <li>
      <%= link_to article.title + " usando link_to", article %>
    </li>
    <% end %>
</ul>
<%= form_for article, :html => {:class => "nifty_form"} do |f| %>
    <div>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
      <%= article.errors.full_messages_for(:title).each do |message| %>
        <div><% message %></div>
      <% end %>
    </div>
    <div>
      <%= f.label :body %><br />
      <%= f.text_area :body, size: "60x12" %>
      <%= article.errors.full_messages_for(:body).each do |message| %>
        <div><% message %></div>
      <% end %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>